<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.appudo.rsmapp.smappcsharp.About"
    android:background="@drawable/fondoacerca">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView3"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

    </ScrollView>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="SMAPP"
    android:textSize="40dp"
    android:fontFamily="Trajan"
    android:id="@+id/textView2"
    android:capitalize="words"
    android:textStyle="bold"
    android:elegantTextHeight="true"
    android:elevation="14dp"
    android:textColor="#0332a1"
        android:layout_marginTop="58dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="C#"
        android:textSize="40dp"
        android:fontFamily="Trajan"
        android:id="@+id/textView3"
        android:capitalize="words"
        android:textStyle="bold"
        android:elegantTextHeight="true"
        android:elevation="14dp"
        android:textColor="#e64f0a"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Developed By\nCesar Smith\nManuel Martinez\n\n\Powered By\nRsmapp developers"
        android:textSize="20dp"
        android:fontFamily="Trajan"
        android:id="@+id/textView4"
        android:capitalize="words"
        android:textStyle="bold"
        android:elegantTextHeight="true"

        android:textColor="#e64f0a"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
